{
	"compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["src/*"]
    },
		"strict": true,
    "target": "esnext",
    "types": ["node"]
	},
	"include": [
		"src"
  ],
  "exclude": [
    "node_modules"
  ]
}
